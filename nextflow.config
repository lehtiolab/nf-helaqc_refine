process.container = 'lehtiolab/helaqc:2.2'


profiles {

  standard {
    includeConfig 'configuration/base.config'
  }
  qc {
    includeConfig 'configuration/base.config'
    process {
      clusterOptions = '--qos=qc'
    }
    params {
      threadspercore = 2
    }
  }
  docker {
    docker.enabled = true
    docker.fixOwnership = true
  }
  lehtio { 
    includeConfig 'configuration/base.config'
    includeConfig 'configuration/lehtio.config'
  }
    executor {
      cpus = 20
    }
  }
}
